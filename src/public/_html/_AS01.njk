<script>
$(function(){
    fn_scrollBottom();

    const copyBtns = document.querySelectorAll('.search-request .util .icon-copy');
    copyBtns.forEach(function(copy){
        copy.addEventListener('click', function(){
            copy.classList.add('is-on');
            fn_toast('본문 내용이 복사되었습니다.',1);
            setTimeout(function(){
                copy.classList.remove('is-on');
            }, 2500);
        });
    });

    
    const goodBtns = document.querySelectorAll('.search-request .util .icon-good');
    goodBtns.forEach(function(good){
        good.addEventListener('click', function(){
            const bad = good.closest('.util').querySelector('.icon-bad');
            if (good.classList.contains('is-on')){
                good.classList.remove('is-on');
                bad.classList.remove('is-off');
            } else {
                good.classList.add('is-on');
                bad.classList.add('is-off');
            }
        });
    })

    const badBtns = document.querySelectorAll('.search-request .util .icon-bad');
    badBtns.forEach(function(bad){
        bad.addEventListener('click', function(){
            const good = bad.closest('.util').querySelector('.icon-good');
            const feedback = good.closest('.util').nextElementSibling;
            if (bad.classList.contains('is-on')){
                bad.classList.remove('is-on');
                good.classList.remove('is-off');
                feedback.classList.remove('is-show');
            } else {
                bad.classList.add('is-on');
                good.classList.add('is-off');
                feedback.classList.add('is-show');
            }
        });
    })
});

function fn_scrollBottom () {
    $(".page-aisearch").scrollTop($(".page-aisearch")[0].scrollHeight);
}
</script>